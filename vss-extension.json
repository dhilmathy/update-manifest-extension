{
  "manifestVersion": 1,
  "id": "update-manifest",
  "name": "Update Manifest File(s)",
  "version": "2.0.5",
  "publisher": "dhilmathy",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "description": "Updates value (or) auto-increment version inside manifest (or any XML based) file(s).",
  "categories": ["Azure Pipelines"],
  "branding": {
    "color": "rgb(34, 34, 34)",
    "theme": "dark"
  },
  "icons": {
    "default": "images/extension-icon.png"
  },
  "files": [
    {
      "path": "update-manifest"
    },
    {
      "path": "screenshots",
      "addressable": true
    }
  ],
  "content": {
    "details": {
      "path": "README.MD"
    },
    "license": {
      "path": "LICENSE"
    }
  },
  "contributions": [
    {
      "id": "update-manifest",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "update-manifest"
      }
    }
  ],
  "repository": {
    "type": "git",
    "uri": "https://github.com/dhilmathy/update-manifest-extension"
  },
  "galleryFlags": ["Public"],
  "tags": ["manifest", "xml", "update", "version", "increment"]
}
